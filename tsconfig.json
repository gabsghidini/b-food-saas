{
	"compilerOptions": {
		"target": "es2016",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"typeRoots": ["src/@types", "node_modules/@types"],
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true
	}
}
